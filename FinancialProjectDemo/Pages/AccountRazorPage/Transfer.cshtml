@page
@model FinancialDemo.Web.Pages.AccountRazorPage.TransferModel
@{
}
<h2>Transfer (Razor Page)</h2>
<form method="post" class="container border text-left pt-2 mb-3">
    <div class="col-md-5">
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(x => Model.SelectedSourceAccount, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.DropDownListFor(x => Model.SelectedSourceAccount, new SelectList(Model.Accounts, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "SourceAccount" })
                @Html.ValidationMessageFor(x => x.SelectedSourceAccount, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => Model.SelectedDestinationAccount, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(x => Model.SelectedDestinationAccount, new SelectList(Model.Accounts, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "DestinationAccount" })
                @Html.ValidationMessageFor(x => x.SelectedDestinationAccount, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => Model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <input asp-for="Amount" class="form-control" type="number" />
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>